<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:id="@+id/v_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/_81D8CF"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_refresh_and_load_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下拉刷新，上拉加载"/>

            <Button
                android:id="@+id/btn_permission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6.0权限"/>

            <Button
                android:id="@+id/btn_scanQrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="扫描二维码"/>

            <Button
                android:id="@+id/btn_generateQrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生成二维码"/>

            <Button
                android:id="@+id/btn_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="banner"/>

            <Button
                android:id="@+id/btn_rxjava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Rxjava的使用"/>

            <Button
                android:id="@+id/btn_objectbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="objectbox"/>

            <Button
                android:id="@+id/btn_autosize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="autosize"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>